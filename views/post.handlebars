{{#each posts as |post| }}
  <div class="row mb-4 post">
    <div class="col-md-5">
      <h2>
  <a href="/post/{{post.id}}" class="post-name">{{post.name}}</a>
</h2>
      <p>Created by {{post.user.name}} on {{format_date post.date_created}}</p>
      <p>{{post.description}}</p>
      <form class="comment-form">
        <div class="form-group">
          <label for="comment">Add a comment:</label>
          <textarea class="form-control" id="comment-txt" rows="3"></textarea>
        </div>
        <button type="submit" id="comment-btn" data-id="{{post.id}}">Submit</button>
      </form>
    </div>
    <div class="col-md-7">
      <div class="comments">
        {{#each post.comments as |comment| }}
          <div class="comment">
            <p>{{comment.comment}}</p>
            <p>Posted by {{comment.user.name}} on {{format_date comment.date_created}}</p>
          </div>
        {{/each}}
      </div>
    </div>
  </div>
{{/each}}

<script src="/js/post.js"></script>