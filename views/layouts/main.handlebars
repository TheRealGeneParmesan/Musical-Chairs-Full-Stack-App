<html lang='en'>
  <head>
    <meta charset='UTF-8' />
    <meta http-equiv='X-UA-Compatible' content='IE=edge' />
    <meta name='viewport' content='width=device-width, initial-scale=1.0' />
    <title>{{title}}</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Handlee&family=Merriweather&family=Roboto&display=swap" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
    <link rel='stylesheet' href='/css/style.css' />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container-fluid">
        <span class="navbar-text h1 me-auto" style="font-family: 'Handlee', cursive; color:rgb(73, 30, 102); text-shadow: 2px 2px rgb(33, 0, 85)">Musical Chairs</span>
        <a class="btn btn-dark" href='/'>Home</a>
        {{#if isLoggedIn}}
          <a class="btn btn-dark mx-2" href='/profile/{{user.id}}'>My Dashboard</a>
          <button class="btn btn-logout btn-dark mx-2">Log Out</button>
        {{else}}
          <a href='/login' class="btn btn-dark mx-2">Login</a>
          <a href='/signup' class="btn btn-warning mx-2">Sign Up</a>
        {{/if}}
      </div>
    </nav>    
    {{{body}}}

    {{#if isLoggedIn}}
    {{!-- music post --}}
    <h2>What are we listening to Today?</h2>
    <section class="container d-flex">
      <form class="p-2 flex-grow-1">
        <div class="mb-3">
            <label for="TrackSearch" class="form-label">Song Title</label>
            <input type="text" class="form-control search" id="search-song" placeholder="Wake Up, Get Up, Get Out There">
        </div>
        <div class="mb-3">
            <label for="TrackReview" class="form-label">Say something for this song</label>
            <textarea class="form-control" id="review-song" rows="3"></textarea>
        </div>
        <button type="submit" class="btn btn-primary">PostðŸŽµ</button>
      </form>
      {{!-- just placing a gif here for now --}}
      <img src="https://media.tenor.com/LuV3kuXwuq8AAAAC/band-rock.gif" alt="animal band gif" style="width:30%; height:30%" class="p-2">
    </section>
    {{/if}}

    <script src='/js/main.js'></script>
  </body>
</html>